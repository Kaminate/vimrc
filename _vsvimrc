set backspace=indent,eol,start
au GUIEnter * simalt ~x " maximize on startup
set hlsearch " Switch on search pattern highlighting.
set ttimeoutlen=10
let mapleader = "\<Space>"
nnoremap <Leader>w :w<CR>
nnoremap <Leader>q :q<CR>
vmap <Leader>y "+y
nmap <Leader>p "+p
nmap <Leader>P "+P
vmap <Leader>p "+p
vmap <Leader>P "+P

""""""""""""""""""""""""""""
