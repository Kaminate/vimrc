" set expandtab tabstop=2
" set smartindent
" match ErrorMsg '\%>80v.\+'
" set number "line numbers
" set ch=3    " Height of command line
" set mousehide " Hide the mouse when typing text
" set foldignore=
" set foldmethod=indent
" set cursorline
" set shiftwidth=0
